<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_course"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_edit_course"
        android:layout_marginRight="2dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"

            app:cardBackgroundColor="@color/lightPurple"
            app:contentPadding="0dp"
            app:cardElevation="5dp"
            >

            <TextView

                android:id="@+id/tv_course_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id here"

                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@android:color/white"
            >


            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name Course"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <Button
        android:id="@+id/btn_edit_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_toStartOf="@+id/btn_delete_course"
        android:layout_marginEnd="2dp"
        android:layout_centerVertical="true"
        />
    <Button
        android:id="@+id/btn_delete_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginRight="3dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />
        

    

</RelativeLayout>